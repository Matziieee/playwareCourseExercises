<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.ActiveChallengesActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/getMGChallengesBtn"
            android:text="Update Challenge List"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/getMGMyChallengesBtn"
            android:text="View my challenges"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/listStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nothing shown"
            />

        <ListView
            android:id="@+id/MGChallengeList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false"
            />
        <ListView
            android:id="@+id/MGMyChallengeList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>